<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include layout="@layout/toolbarlayout"/>

    <com.google.android.material.tabs.TabLayout
        android:id="@+id/tab_layout_subcategory"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:soundEffectsEnabled="true"
        app:tabIndicatorAnimationDuration="@android:integer/config_shortAnimTime"
        app:tabIndicatorColor="#679944"
        app:tabIndicatorHeight="5dp"
        app:tabSelectedTextColor="@android:color/black"
        app:tabTextColor="@android:color/darker_gray" />

    <androidx.viewpager.widget.ViewPager
        android:id="@+id/view_pager_subcategory"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>





</LinearLayout>