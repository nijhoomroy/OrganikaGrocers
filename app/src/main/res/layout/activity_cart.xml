<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout android:background="#e1e1e1"
    android:layout_height="fill_parent"
    android:layout_width="fill_parent"
    android:backgroundTint="#ffff"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <include layout="@layout/toolbarlayout"
        android:id="@+id/toolbar"/>


    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recycler_view_cart"
        android:layout_above="@+id/btn_proceedtocheckout"
        android:layout_below="@+id/toolbar"
        android:layout_height="match_parent"
        android:layout_width="match_parent"/>
    <LinearLayout
        android:id="@+id/layout_total"
        android:layout_above="@id/btn_proceedtocheckout"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:padding="5dp"
        android:weightSum="2">

        <TextView android:gravity="end"
            android:layout_height="wrap_content"
            android:fontFamily="@font/cabin_semibold"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:textColor="#000"
            android:textStyle="bold"
            android:text="SubTotal : "
            android:textSize="20dp">
        </TextView>

        <TextView
            android:id="@+id/text_view_amount_total"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:fontFamily="@font/cabin_semibold"
            android:layout_width="match_parent"
            android:textColor="#000"
            android:textStyle="bold"
            android:text="$"
            android:textSize="20dp">
        </TextView>
    </LinearLayout>

    <Button
        android:id="@+id/btn_proceedtocheckout"
        android:layout_gravity="center"
        android:layout_alignParentBottom="true"
        android:layout_height="60dp"
        android:layout_width="match_parent"
        android:onClick="insertOrder"
        android:fontFamily="@font/cabin_semibold"
        android:text="Proceed to Checkout"
        android:textColor="@android:color/white"
        android:background="@drawable/btn_rounded">
    </Button>

</RelativeLayout>