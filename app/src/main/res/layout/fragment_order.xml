<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="10dp"
    android:background="#fff">

    <TextView
        android:id="@+id/order_summary"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="6dp"
        android:fontFamily="@font/cabin_semibold"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="10dp"
        android:text="Order Summary"
        android:textColor="#5D6D7E"
        android:textSize="26dp" />

    <LinearLayout
        android:id="@+id/linear_layout1"
        android:layout_width="match_parent"
        android:layout_below="@id/order_summary"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/cabin_semibold"
            android:textSize="22dp"
            android:layout_marginLeft="40dp"
            android:layout_marginTop="20dp"
            android:text="SubTotal"
            android:textColor="#5D6D7E"/>


        <TextView
            android:id="@+id/text_view_subtotal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/cabin_semibold"
            android:textSize="22dp"
            android:layout_marginLeft="100dp"
            android:layout_marginTop="20dp"
            android:text="SubTotal"
            android:textColor="#5D6D7E"/>


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/linear_layout1"
        android:id="@+id/linear_layout2"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/cabin_semibold"
            android:textSize="22dp"
            android:layout_marginLeft="40dp"
            android:layout_marginTop="20dp"
            android:text="Taxes and Fees"
            android:textColor="#5D6D7E"/>


        <TextView
            android:id="@+id/text_view_taxes"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/cabin_semibold"
            android:textSize="22dp"
            android:layout_marginLeft="40dp"
            android:layout_marginTop="20dp"
            android:text="SubTotal"
            android:textColor="#5D6D7E"/>


    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/linear_layout2"
        android:id="@+id/linear_layout3"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/cabin_semibold"
            android:textSize="22dp"
            android:layout_marginLeft="40dp"
            android:layout_marginTop="20dp"
            android:text="Shipping"
            android:textColor="#5D6D7E"/>


        <TextView
            android:id="@+id/text_view_shipping"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/cabin_semibold"
            android:textSize="22dp"
            android:layout_marginLeft="100dp"
            android:layout_marginTop="20dp"
            android:text="SubTotal"
            android:textColor="#5D6D7E"/>


    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/linear_layout3"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/cabin_semibold"
            android:textSize="26dp"
            android:layout_marginLeft="40dp"
            android:layout_marginTop="20dp"
            android:textStyle="bold"
            android:text="Total"
            android:textColor="#5D6D7E"/>


        <TextView
            android:id="@+id/text_view_total"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/cabin_semibold"
            android:textSize="26dp"
            android:layout_marginLeft="120dp"
            android:layout_marginTop="20dp"
            android:text="SubTotal"
            android:textStyle="bold"
            android:textColor="#5D6D7E"/>


    </LinearLayout>

    <Button
        android:id="@+id/btn_complete"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_alignParentBottom="true"
        android:background="@drawable/btn_rounded"
        android:fontFamily="@font/cabin_semibold"
        android:onClick="insertOrder"
        android:text="Complete Order"
        android:textColor="@android:color/white"
        android:textSize="18dp">

    </Button>





</RelativeLayout>