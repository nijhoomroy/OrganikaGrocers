<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <include layout="@layout/toolbarlayout" />



    <ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:id="@+id/product_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#fff"
            android:orientation="vertical">


            <TextView
                android:id="@+id/text_view_product_name_detail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:fontFamily="@font/cabin_semibold"
                android:padding="5dp"
                android:text="name"
                android:textColor="#000"
                android:textSize="22dp" />

            <ImageView
                android:id="@+id/image_view_product_image_detail"
                android:layout_width="300dp"
                android:layout_height="300dp"
                android:layout_gravity="center_horizontal"
                android:scaleType="centerCrop" />

            <TextView
                android:id="@+id/text_view_price_detail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:fontFamily="@font/cabin_semibold"
                android:text="$1.000"
                android:textColor="#000"
                android:textSize="30dp" />

            <TextView
                android:id="@+id/text_view_unit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:fontFamily="@font/cabin_semibold"
                android:textColor="#5D6D7E"
                android:textSize="18dp" />

            <TextView
                android:id="@+id/text_view_features_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/cabin_semibold"
                android:text="Product Features"
                android:textColor="#5D6D7E"
                android:textSize="26dp" />

            <TextView
                android:id="@+id/text_description"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="5dp"
                android:textColor="#5D6D7E"
                android:textSize="18dp" />




    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:focusable="auto"
        app:cardCornerRadius="10dp"
        app:cardElevation="6dp"
        app:cardUseCompatPadding="true">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_gravity="bottom"
            android:background="#fff">

            <TextView
                android:id="@+id/text_view_price_detail_bottom"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_marginLeft="15dp"
                android:fontFamily="@font/cabin_semibold"
                android:text="$15.00"
                android:layout_marginBottom="20dp"
                android:textColor="#000"
                android:textSize="30dp" />

            <Button
                android:id="@+id/btn_add_to_cart"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:layout_alignParentRight="true"
                android:layout_alignParentBottom="true"
                android:layout_marginRight="10dp"
                android:background="@drawable/btn_rounded"
                android:fontFamily="@font/cabin_semibold"
                android:padding="10dp"
                android:text="Add to Cart"
                android:textColor="#fff"
                android:layout_marginBottom="20dp"
                android:textSize="18dp" />


            <LinearLayout
                android:id="@+id/layout_qty_detail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
                android:layout_marginTop="20dp"
            android:gravity="right"
            android:orientation="horizontal">

                <ImageButton
                    android:id="@+id/btn_remove_inproductdetail"
                    android:layout_width="50dp"
                    android:layout_height="75dp"
                    android:layout_marginBottom="5dp"
                    android:background="#ffff"
                    android:src="@drawable/ic_remove_circle_black_24dp" />
                <TextView
                    android:id="@+id/text_view_qty_inproductdetail"
                    android:layout_width="40dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:text="1"
                    android:textAlignment="center"
                    android:textSize="24dp"
                    android:padding="5dp"
                    android:background="@drawable/text_border"
                    android:textColor="#000"/>
                <ImageButton
                    android:id="@+id/btn_add_inproductdetail"
                    android:layout_width="50dp"
                    android:layout_height="75dp"
                    android:layout_marginRight="-10dp"
                    android:layout_marginBottom="5dp"
                    android:background="#ffff"
                    android:src="@drawable/ic_add_circle_black_24dp" />


        </LinearLayout>

        </RelativeLayout>

    </androidx.cardview.widget.CardView>
        </LinearLayout>
    </ScrollView>






</LinearLayout>