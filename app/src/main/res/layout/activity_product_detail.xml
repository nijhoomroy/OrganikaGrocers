<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffff">



    <LinearLayout
        android:id="@+id/product_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#fff"
        android:orientation="vertical">

        <include layout="@layout/toolbarlayout"/>

        <TextView
            android:id="@+id/text_view_product_name_detail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:fontFamily="@font/cabin_semibold"
            android:text="name"
            android:textColor="#000"
            android:textSize="28dp" />

        <ImageView
            android:id="@+id/image_view_product_image_detail"
            android:layout_width="300dp"
            android:layout_height="300dp"
            android:layout_gravity="center_horizontal"
            android:scaleType="centerCrop" />

        <TextView
            android:id="@+id/text_view_price_detail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:fontFamily="@font/cabin_semibold"
            android:text="$1.000"
            android:textColor="#000"
            android:textSize="30dp" />

        <TextView
            android:id="@+id/text_view_unit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:fontFamily="@font/cabin_semibold"
            android:textColor="#5D6D7E"
            android:textSize="18dp" />

        <TextView
            android:id="@+id/text_view_features_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/cabin_semibold"
            android:text="Product Features"
            android:textColor="#5D6D7E"
            android:textSize="26dp" />

        <TextView
            android:id="@+id/text_description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="5dp"
            android:textColor="#5D6D7E"
            android:textSize="18dp" />

        <RelativeLayout
            android:layout_width="372dp"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/text_view_price_detail_bottom"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentBottom="true"
                android:layout_marginLeft="15dp"
                android:fontFamily="@font/cabin_semibold"
                android:textColor="#000"
                android:textSize="30dp" />

           <Button
                android:id="@+id/btn_add_to_cart"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_alignParentBottom="true"
                android:layout_marginRight="10dp"
                android:background="@drawable/btn_rounded"
                android:fontFamily="@font/cabin_semibold"
                android:padding="5dp"
                android:text="+ Add"
                android:textColor="#fff"
                android:textSize="22dp"/>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:gravity="right"
            android:orientation="horizontal">

            <ImageButton
                android:id="@+id/btn_remove_detail"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginBottom="5dp"
                android:background="#ffff"
                android:src="@drawable/ic_remove_circle_black_24dp" />
            <TextView
                android:id="@+id/text_view_qty"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1"
                android:textSize="18dp"
                android:textColor="#ffff"/>
            <ImageButton
                android:id="@+id/btn_add_detail"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginRight="-10dp"
                android:layout_marginBottom="5dp"
                android:background="#ffff"
                android:src="@drawable/ic_add_circle_black_24dp" />


        </LinearLayout>

        </RelativeLayout>
    </LinearLayout>

</ScrollView>

