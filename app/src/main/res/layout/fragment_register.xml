<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#fff"
    android:padding="10dp">

    <ImageView
        android:layout_width="285dp"
        android:layout_height="174dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="20dp"
        android:src="@drawable/logo" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/cabin_semibold"
        android:text="Sign up and start shopping!"
        android:textSize="20dp"
        android:textColor="#679944"
        android:layout_gravity="center_horizontal"/>
    <EditText
        android:id="@+id/edit_text_firstname"
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/cabin_semibold"
        android:hint="first name"
        android:textSize="24dp"
        android:layout_gravity="center_horizontal"/>
    <EditText
        android:id="@+id/edit_text_lastname"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/cabin_semibold"
        android:hint="last name"
        android:textSize="24dp"
        android:layout_gravity="center_horizontal"/>
    <EditText
        android:id="@+id/edit_text_email_register"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/cabin_semibold"
        android:hint="email"
        android:textSize="24dp"
        android:layout_gravity="center_horizontal"/>

    <EditText
        android:id="@+id/edit_text_password_register"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/cabin_semibold"
        android:hint="password"
        android:inputType="textPassword"
        android:textSize="24dp"
        android:layout_gravity="center_horizontal"/>

    <EditText
        android:id="@+id/edit_text_phone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/cabin_semibold"
        android:hint="phone"
        android:textSize="24dp"
        android:inputType="phone"
        android:layout_gravity="center_horizontal"/>


    <Button
        android:id="@+id/btn_register"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="50dp"
        android:background="@drawable/btn_rounded"
        android:fontFamily="@font/fredoka_one"
        android:padding="10dp"
        android:text="Register"
        android:textColor="#fff"
        android:textSize="20dp" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/text_view_firsttimeshopper"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="90dp"
            android:layout_marginTop="20dp"
            android:fontFamily="@font/cabin_semibold"
            android:text="Already have an account?"
            android:textColor="#000"
            android:textSize="15dp" />

        <TextView
            android:id="@+id/text_view_signin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="60dp"
            android:layout_toRightOf="@+id/text_view_firsttimeshopper"
            android:clickable="true"
            android:fontFamily="@font/cabin_semibold"
            android:linksClickable="true"
            android:text="Sign In!"
            android:textColor="#679944"
            android:textSize="15dp" />



    </RelativeLayout>





</LinearLayout>

</ScrollView>